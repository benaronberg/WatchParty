<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:coverflow="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/root">

    <!-- Header Bar -->
    <RelativeLayout
        android:id="@+id/header_bar"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentTop="true">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/wp_logo" />


        <SearchView
            android:id="@+id/searchView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <!-- Big Scroller -->
    <ScrollView
        android:id="@+id/big_scroller"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/header_bar"
        android:layout_above="@+id/footer_bar">

        <LinearLayout
            android:id="@+id/home_holder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <!-- Show Tabs -->
            <TabHost
                android:id="@+id/showTabs"
                android:layout_width="fill_parent"
                android:layout_height="300dp">

                <LinearLayout
                    android:id="@+id/showTabs_holder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center" />

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/tab_friends_watch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <com.mysampleapp.FeatureCoverFlow
                                android:id="@+id/coverflow_friends_watch"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                coverflow:coverHeight="@dimen/cover_height"
                                coverflow:coverWidth="@dimen/cover_width"
                                coverflow:maxScaleFactor="1.5"
                                coverflow:reflectionGap="0px"
                                coverflow:rotationThreshold="0.5"
                                coverflow:scalingThreshold="0.5"
                                coverflow:spacing="0.6" />

                            <TextSwitcher
                                android:id="@+id/title_friends_watch"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:paddingBottom="16dp"
                                android:layout_alignParentBottom="true" />
                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/tab_favorites"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <com.mysampleapp.FeatureCoverFlow
                                android:id="@+id/coverflow_favorites"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                coverflow:coverHeight="@dimen/cover_height"
                                coverflow:coverWidth="@dimen/cover_width"
                                coverflow:maxScaleFactor="1.5"
                                coverflow:reflectionGap="0px"
                                coverflow:rotationThreshold="0.5"
                                coverflow:scalingThreshold="0.5"
                                coverflow:spacing="0.6" />

                            <TextSwitcher
                                android:id="@+id/title_favorites"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:paddingBottom="16dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerVertical="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/tab_i_watch"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <com.mysampleapp.FeatureCoverFlow
                                android:id="@+id/coverflow_i_watch"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                coverflow:coverHeight="@dimen/cover_height"
                                coverflow:coverWidth="@dimen/cover_width"
                                coverflow:maxScaleFactor="1.5"
                                coverflow:reflectionGap="0px"
                                coverflow:rotationThreshold="0.5"
                                coverflow:scalingThreshold="0.5"
                                coverflow:spacing="0.6" />

                            <TextSwitcher
                                android:id="@+id/title_i_watch"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_alignParentBottom="true"
                                android:layout_centerVertical="true"
                                android:paddingBottom="16dp" />
                        </RelativeLayout>

                    </FrameLayout>
                </LinearLayout>
            </TabHost>

            <FrameLayout
                android:id="@+id/hubTabs_frame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\n\nscrolling"/>
        </LinearLayout>


    </ScrollView>

    <!-- Footer Bar -->
    <LinearLayout
        android:id="@+id/footer_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#31353a"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bottom_bar_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:srcCompat="@mipmap/wp_logo"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/bottom_bar_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:srcCompat="@mipmap/wp_logo"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/bottom_bar_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:srcCompat="@mipmap/wp_logo"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/bottom_bar_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:srcCompat="@mipmap/wp_logo"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>